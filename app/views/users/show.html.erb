						<tr>
							<th class= "col-sm-1"> User </th>
							<th class= "col-sm-1"> Name </th>
							<th class= "col-sm-1"> Email </th>
						</tr>
						<tr>
							<td><%= @user.id %></td>
							<td><%= @user.name %></td>
							<td><%= @user.email %></td>
						</tr>
					</table>
				</div>
				<%= render "pomodoros/form" %>
				</div>
			</div>
		</div>
	</div>
