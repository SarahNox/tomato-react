<% provide(:title, "Edit user") %>
 <h1>Update your profile</h1>

 <div class="row">
   <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
    <%= render 'shared/error_messages' %>
    
      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :email %>
      <%= f.email_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password, :placeholder => "confirm changes by enterin password" %>

      <%= f.password_field :password, :palceholder => "confirm changes by entering password" %>

      <br /> <br />

       <%= f.submit "Save changes" %>
     <% end %>
     <p>Want to change your password? <%= link_to "Change Password", password_edit_path %></p>
   </div>
 </div> 