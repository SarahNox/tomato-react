<h1>User</h1>
<p> All</p>
<html>
<head>
	<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
	<%= csrf_meta_tags %>
</head>
<body>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
  	<%= paginate @users %>
  		<table>
		<tr>
			<th> User </th>
			<th> Name </th>
			<th> Email </th>
		</tr>

		<% @users.each do |user| %>
		<tr>
			<td><%= user.id %></td>
			<td><%= user.name %></td>
			<td><%= user.email %></td>
		</tr>
		<% end %>
	</table>

  </div>
</div>
</body>
</html>