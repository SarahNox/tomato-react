<div class="col-sm-5 blog-main">
  <script>
  $(function() {
    $(".dial").knob({
      "readOnly":true
    });
  });
  </script>
  <div class="circular-bar">
    <input class="dial" data-width="450" data-height="450" value="1500">
    <div class="circular-bar-content"
    <strong></strong>
    <div class="pomodoro_task_name"> <%= @task.name %> </div>
    <div id="countdown">Tomato</div>
    <div id="pause" style="visibility: hidden">Pause</div> 
  </div>
</div>
<button class="btn btn_start" button id="toggle" onclick="toggle()">></button>
<button class="btn btn_stop" button id="interrupt" onclick="interrupt()">Stop</button>
</div>
<div class="col-md-5 col-md-offset-2 blog-sidebar">
  <div class="sidebar-module">
    <div class="daily-pomodoro">
      <body class="pomodoros">
        <%= form_for(@pomodoro, url: project_task_pomodoros_url) do |f| %>
          <%= f.hidden_field :project_name, :value => @project.name %>
          <%= f.hidden_field :task_name, :value => @task.name %>
          <%= f.hidden_field :success %>
        <% end %>
        <div class="headline">
          <%= link_to new_project_path do %>
          <span class="button2" data-tooltip aria-haspopup="true" title="new project">+</span>
          <% end %>
        </div>
        <body class="pomodoros">
          <%= render "shared/form" %>
        </body>
      </div>
    </div>
  </div>
</div>
